<% @story.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, radius: 5 %>
<% end %>
<h1><%= @story.title %></h1>
<h4><%= @story.genre %></h4>
<h6><%= @story.synopsis %></h6>
<p><%= @story.content %></p>
<p><%= @story.rich_content %></p>

<% @story.collabs.each do |collab| %>
<%= collab.user.first_name%> <%= collab.user.last_name%>
  <li class="list-group-item"><%= collab.rich_content %>
  </li>
  <% end %>


<p><a href="<%= stories_path %>">Continue this story</a></p>
<p><a href="<%= stories_path %>">Stories index</a></p>
<%= link_to "Continue a Story", new_story_collab_path(@story) %>
<%= link_to "Delete",
  story_path(@story),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
